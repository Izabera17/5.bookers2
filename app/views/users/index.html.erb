<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>Users</h2>
        
        <div>
            <%= image_tag @user_id.get_profile_image(100, 100) %>
            
            <table class="table">
              <tr></tr>
              <tr>
                <th>name</th>
                <th>
                  <%= @user_id.name %>
                </th>
              </tr>
              <tr>
                <th>introduction</th>
                <th>
                  <%= @user_id.introduction %>
                </th>
              </tr>
              <tr></tr>
            </table>
        </div>
        
        <div class="row">
          <%= link_to edit_user_path(@user_id), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
  
        <h2 class="mt-3">New book</h2>
          
        <%= form_with(model: @books, local: true) do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <p><%= f.text_field :title %></p>  
          </div>
          
          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <p><%= f.text_area :body %></p>
          </div>
          
          <div class="form-group">
            <%= f.submit 'Create Book', class: "btn btn-success"%>
          </div>
          
        <% end %>  
        
      </div>
      
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan='3'></th>
            </tr>
          </thead>
          <tbody>
            <% @user.each do |user| %>
              <tr>
                <th>
                  <%= image_tag user.get_profile_image(80, 80) %>
                </th>
                <th>
                  <%= user.name %>
                </th>
                <th>
                  <%= link_to "Show", user_path(user.id) %>
                </th>
                </th>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    
    </div>
  </div>
</main>

<%= render 'homes/footer' %>