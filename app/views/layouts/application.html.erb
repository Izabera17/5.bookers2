<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <div class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">Bookers</a>
          
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Togglenavigarion">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              
               <% if user_signed_in? %>
                 <li class='nav-link'>
                    <%= link_to 'Home', book_path, class: 'text-light' %>
                  </li>
                  <li class='nav-link'>
                    <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'text-light' %>
                  </li>
                  
                <% else %>
                  <li class='nav-link'>
                    <i class="fa-solid fa-house"></i>
                    <%= link_to 'Home', root_path, class: 'text-light' %>
                  </li>
                  <li class='nav-link'>
                    <i class="fa-solid fa-link"></i>
                    <%= link_to 'About', about_path, class: 'text-light' %>
                  </li>
                  <li class='nav-link'>
                    <i class="fa-solid fa-user-plus"></i>
                    <%= link_to "Sign up", new_user_registration_path, class: 'text-light'  %>
                  </li>
                  <li class='nav-link'>
                    <i class="fa-solid fa-right-to-bracket"></i>
                    <%= link_to "Log in", new_user_session_path, class: 'text-light'  %>
                  </li>
        
                <% end %>
            </ul>
          </div>
        </div>
      </div>
    </header>
    
    <%= yield %>

  </body>
</html>

